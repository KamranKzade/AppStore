<Window x:Class="AppStore.AppStore_Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppStore"
        mc:Ignorable="d"
        Title="AppStore_Window" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        
        
            <Label Grid.Row="0" Content="Store" 
               FontWeight="Bold"
               FontSize="48"
               FontStyle="Italic"
               FontFamily="Comic Sans Ms"
               VerticalContentAlignment="Center"
               HorizontalContentAlignment="Center">
                <Label.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="#b92b27" Offset="0.25"/>
                        <GradientStop Color="#1565C0" Offset="0.9"/>
                    </LinearGradientBrush>
                </Label.Foreground>
            </Label>
        
            <ScrollViewer Grid.Row="1"
                          HorizontalScrollBarVisibility="Auto">
                    <StackPanel x:Name="bombaStackPanel" 
                        />
            </ScrollViewer>

    </Grid>
</Window>
